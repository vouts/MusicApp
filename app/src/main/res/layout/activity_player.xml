<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context="com.example.android.musicapp.PlayerActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/song_title"
            style="@style/ListText" />

        <LinearLayout style="@style/SongSideInfoBox">

            <TextView
                android:id="@+id/song_artist"
                style="@style/ListText" />

            <TextView
                style="@style/ListText"
                android:text="@string/divider" />

            <TextView
                android:id="@+id/song_album"
                style="@style/ListText" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:src="@drawable/album" />
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:layout_marginRight="@dimen/SongBoxMarginSides"
        android:layout_marginLeft="@dimen/SongBoxMarginSides"
        android:max="100"
        android:progress="40"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/playpause"
            android:background="@null"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/stop"
            android:background="@null"/>
    </LinearLayout>
</LinearLayout>
